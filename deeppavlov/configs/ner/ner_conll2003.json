{
  "dataset_reader": {
    "name": "conll2003_reader",
    "data_path": "conll2003/"
  },
  "dataset_iterator": {
    "name": "basic_dataset_iterator"
  },
  "chainer": {    
    "in": ["x"],
    "in_y": ["y"],
    "pipe": [
      {
        "id": "word_vocab",
        "name": "default_vocab",
        "fit_on": ["x"],
    "level": "token",
        "save_path": "ner_conll2003/word.dict",
        "load_path": "ner_conll2003/word.dict"
      },
      {
        "id": "tag_vocab",
        "name": "default_vocab",
        "fit_on": ["y"],
    "level": "token",
        "save_path": "ner_conll2003/tag.dict",
        "load_path": "ner_conll2003/tag.dict"
      },
      {
        "id": "char_vocab",
        "name": "default_vocab",
        "fit_on": ["x"],
    "level": "char",
        "save_path": "ner_conll2003/char.dict",
        "load_path": "ner_conll2003/char.dict"
      },      
      {
        "in": ["x"],
        "in_y": ["y"],
        "out": ["y_predicted"],
        "name": "ner",
        "main": true,
        "save_path": "ner_conll2003/ner_model",
        "load_path": "ner_conll2003/ner_model",
        "word_vocab": "#word_vocab",
        "tag_vocab": "#tag_vocab",
        "char_vocab": "#char_vocab",
        "verbouse": true,
        "filter_width": 7,
        "embeddings_dropout": true,
        "n_filters": [
          128,
          128
        ],
        "token_embeddings_dim": 100,
        "char_embeddings_dim": 64,
        "use_batch_norm": true,
        "use_crf": true,
        "learning_rate": 1e-3,
        "dropout_rate": 0.5,
        "use_capitalization": true,
        "two_dense_layers": true,
        "dicts_file": "download/conll2003/conll2003.train_val.l.pkl",
        "pretrained_emb": "../../ner/pretrained_embeddings/glove.6B.100d.txt",
        "word_dim": 100,
        "word_hidden_size": 200,
        "char_dim": 64,
        "nb_filters_1": 128,
        "nb_filters_2": 128,
        "cap_dim": 10,
        "cap_hidden_size": 15,
        "drop_out": 0.5
      }
    ],
    "out": ["y_predicted"]
  },
  "train": {
    "epochs": 100,
    "batch_size": 64,

    "metrics": ["ner_f1"],
    "validation_patience": 5,
    "val_every_n_epochs": 5,

    "log_every_n_epochs": 1,
    "show_examples": false
  }
}

