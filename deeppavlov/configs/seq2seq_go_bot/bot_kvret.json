{
  "dataset_reader": {
    "name": "kvret_reader",
    "data_path": "kvret"
  },
  "dataset_iterator": {
    "name": "kvret_dialog_iterator"
  },
  "chainer": {
    "in": ["x_text", "x_meta"],
    "in_y": ["y_text"],
    "out": ["y_predicted"],
    "pipe": [
      {
        "name": "stream_spacy_tokenizer",
        "lowercase": "true",
        "in": ["x_text"],
        "out": ["x_tokens"]
      },
      {
        "name": "stream_spacy_tokenizer",
        "lowercase": "true",
        "in": ["y_text"],
        "out": ["y_tokens"]
      },
      {
        "id": "src_token_vocab",
        "fit_on": ["x_tokens"],
        "name": "default_vocab",
        "level": "token",
        "tokenizer": { "name": "split_tokenizer" },
        "special_tokens": ["<SOS>"],
        "save_path": "vocabs/src_tokens.dict",
        "load_path": "vocabs/src_tokens.dict"
      },
      {
        "id": "tgt_token_vocab",
        "fit_on": ["y_tokens"],
        "debug": true,
        "name": "default_vocab",
        "level": "token",
        "tokenizer": { "name": "split_tokenizer" },
        "special_tokens": ["<SOS>", "<EOS>"],
        "save_path": "vocabs/tgt_tokens.dict",
        "load_path": "vocabs/tgt_tokens.dict"
      },
      {
        "in": ["x_tokens", "x_meta"],
        "in_y": ["y_tokens"],
        "out": ["y_predicted"],
        "main": true,
        "name": "seq2seq_go_bot",
        "start_of_sequence_token": "<SOS>",
        "end_of_sequence_token": "<EOS>",
        "network": {
          "name": "seq2seq_go_bot_nn",
          "load_path": "seq2seq_go_bot/model",
          "save_path": "seq2seq_go_bot/model",
          "learning_rate": 0.001,
          "target_start_of_sequence_index": "#tgt_token_vocab.__getitem__('SOS')",
          "target_end_of_sequence_index": "#tgt_token_vocab.__getitem__('EOS')",
          "source_vocab_size": "#src_token_vocab.__len__()",
          "target_vocab_size": "#tgt_token_vocab.__len__()",
          "hidden_size": 256
        },
        "source_vocab": "#src_token_vocab",
        "target_vocab": "#tgt_token_vocab",
        "debug": true,
        "debug": false,
        "bow_encoder": {
          "name": "bow"
        }
      }
    ]
  },
  "train": {
    "epochs": 200,
    "batch_size": 20,

    "metrics": ["per_item_bleu", "per_item_accuracy"],
    "validation_patience": 20,
    "val_every_n_epochs": 1,

    "log_every_n_batches": -1,
    "log_every_n_epochs": 1,
    "show_examples": false
  }
}
